$TTL    86400
@       IN      SOA     dns.intranet.local. admin.intranet.local. (
                        2025042001      ; Serial
                        3600            ; Refresh
                        1800            ; Retry
                        604800          ; Expire
                        86400           ; Minimum TTL
                        )
;
@       IN      NS      dns.intranet.local.
dns     IN      A       172.20.1.10
router  IN      A       172.20.1.7
dhcp    IN      A       172.20.1.12
web     IN      A       172.20.1.14  
ldap    IN      A       172.20.1.18  ; Placeholder para o futuro servidor LDAP
samba   IN      A       172.20.1.13  ; Placeholder para o futuro servidor SAMBA
ftp     IN      A       172.20.1.16  ; Placeholder para o futuro servidor FTP
